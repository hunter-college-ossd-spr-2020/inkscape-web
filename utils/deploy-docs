#!/bin/bash
#set -e

DIR="$( cd "$( dirname "${BASH_DOCS[0]}" )" && pwd )"
cd $DIR/../

TEST=$@
export DOCS="/tmp/docs"
source "data/deployment"
export DOC_TARGET="$TARGET/data/media/doc"

if [ ! -d "$DOC_TARGET" ]; then
    echo "Target doesn't exist: $DOC_TARGET"
    exit 2
fi

if [ ! -d "$DOCS" ]; then
    echo "Can't find docs in $DOC_SOURCE"
    exit 1
fi

cd $DOCS

if [ -d $DOC_TARGET ]; then
  bzr pull --overwrite | grep Now\ on\ revision &> /dev/null
  if [[ $? == 0 ]]; then
    echo "New revisions found, updating!"
    echo "Sending docs to ${DOC_TARGET}..."
    rsync -ua $TEST --exclude='.bzr/' --delete . $DOC_TARGET
    bzr revno > $DOC_TARGET/revision
  else
    echo "Docs alrady up to date!"
  fi
fi
